{
   "version": "1",
   "minimum_chrome_version": "42",
   "name": "CloseTab",
   "description": "Add a \"Close tab\" entry to the page context menu",
   "default_locale": "en",
   "manifest_version": 2,
   "options_page": "options.html",
   "icons": {
      "16": "img/logo16.png",
      "48": "img/logo48.png",
      "128": "img/logo128.png"
   },
   "background": {
      "scripts": [
         "common.js",
         "bg.js"
      ]
   },
   "content_security_policy": "script-src 'self'; object-src 'self'",
   "permissions": [
      "contextMenus"
   ]
}
